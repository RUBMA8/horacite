<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-shield-lock me-2"></i>Administration</h2>
</div>
 
<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-people me-2"></i>Utilisateurs recents</h6>
            </div>
            <div class="card-body">
                {{#if recentUsers}}
                <ul class="list-group list-group-flush">
                    {{#each recentUsers}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>{{this.prenom}} {{this.nom}}</strong>
                            <br>
                            <small class="text-muted">{{this.email}}</small>
                        </div>
                        <span class="badge bg-{{#eq this.role 'admin'}}danger{{else}}primary{{/eq}}">
                            {{roleLabel this.role}}
                        </span>
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <p class="text-muted mb-0">Aucun utilisateur</p>
                {{/if}}
            </div>
            <div class="card-footer">
                <a href="/admin/users" class="btn btn-sm btn-outline-primary">
                    Voir tous les utilisateurs
                </a>
            </div>
        </div>
    </div>
 
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-calendar3 me-2"></i>Sessions recentes</h6>
            </div>
            <div class="card-body">
                {{#if recentSessions}}
                <ul class="list-group list-group-flush">
                    {{#each recentSessions}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>{{this.nom}}</strong>
                            <br>
                            <small class="text-muted">{{formatDate this.date_debut}} - {{formatDate this.date_fin}}</small>
                        </div>
                        <span class="badge bg-{{#eq this.statut 'active'}}success{{else}}{{#eq this.statut 'terminee'}}secondary{{else}}warning{{/eq}}{{/eq}}">
                            {{statutSession this.statut}}
                        </span>
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <p class="text-muted mb-0">Aucune session</p>
                {{/if}}
            </div>
            <div class="card-footer">
                <a href="/admin/sessions" class="btn btn-sm btn-outline-primary">
                    Voir toutes les sessions
                </a>
            </div>
        </div>
    </div>
 
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-clock-history me-2"></i>Activite recente</h6>
            </div>
            <div class="card-body">
                {{#if recentLogs}}
                <ul class="list-group list-group-flush">
                    {{#each recentLogs}}
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <span class="badge bg-{{actionColor this.action}}">{{this.action}}</span>
                            <small class="text-muted">{{formatDateTime this.created_at}}</small>
                        </div>
                        <small>
                            {{this.user_name}} - {{this.table_name}}
                        </small>
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <p class="text-muted mb-0">Aucune activite</p>
                {{/if}}
            </div>
            <div class="card-footer">
                <a href="/admin/logs" class="btn btn-sm btn-outline-primary">
                    Voir tous les journaux
                </a>
            </div>
        </div>
    </div>
</div>
 
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-gear me-2"></i>Actions rapides</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/admin/users/create" class="btn btn-outline-primary">
                        <i class="bi bi-person-plus me-2"></i>Creer un utilisateur
                    </a>
                    <a href="/admin/sessions/create" class="btn btn-outline-primary">
                        <i class="bi bi-calendar-plus me-2"></i>Creer une session
                    </a>
                    <a href="/admin/programmes" class="btn btn-outline-primary">
                        <i class="bi bi-book me-2"></i>Gerer les programmes
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
